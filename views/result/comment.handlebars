<div class="full">
    {{#if haserror}}
        <p class="error">We're sorry, but {{error}}.</p>

    {{else}}


    <div class="parkLotAllComments">

        <div id = 'ParkLotId' hidden>{{ParkLotDetail._id}}</div>
        
        <div id="AA">
            {{AA}}
        </div>
        
        <div id="result" hidden>
        </div>

        <div id="error" hidden>
        </div>
            
        <div class = "parklotInfo">
            <p id="ParkLotName"> ParkLotName : {{ParkLotDetail.parkLotname}} </p>
            <p id="ChargeStander">ChargeStandar : {{ParkLotDetail.parkingChargeStandard}}</p>
            <p id="location"> parkingLotCoordinates: {{ParkLotDetail.parkingLotCoordinates}} </p>
            <p id="disabilityFrendly"> disabilityFrendly : {{ ParkLotDetail.disabilityFriendly}} </p>
            <p id="suitableSize"> suitableVehicleSize : {{ParkLotDetail.suitableVehicleSize}} </p>
            <p id="rate"> rating : {{ParkLotDetail.rating}} </p>
            <p id="capacity">Capacity: {{ParkLotDetail.parkingLotCapacity}}</p>
        </div>
        



        
        <div class="comment-list" id="commentList">
    
            <br>
            {{#each commentsList}} {{> comment }} {{/each}}
            <br>
            
        </div>
        
        <div>
            
            <form id = "addNewComment" class = "comment-form"  >    
                <div class = "Comment-container">
                
                    
                    <label for = "rating">rating:</label>
                    <input type = "number" id = "rating" name = "rating" placeholder="add the rating" >



                    <p><input type = "checkbox" name = "tag" value="Large Parking Space"/> Large Parking Space</p>
                    <p><input type = "checkbox" name = "tag" value="Medium Parking Space"/> medium Parking Space</p>
                    <p><input type = "checkbox" name = "tag" value="Small Parking Space"/> Small Parking Space</p>

                    <p><input type = "checkbox" name = "tag" value="Large capacity"/> Large Capacity</p>
                    <p><input type = "checkbox" name = "tag" value="Medium capacity"/> Medium Capacity</p>
                    <p><input type = "checkbox" name = "tag" value="Small capacity"/> Small Capacity</p>

                    <p><input type = "checkbox" name = "tag" value="Disability friendly"/> Disability friendly</p>
                    <p><input type = "checkbox" name = "tag" value="Clean"/>Clean</p>
                    <p><input type = "checkbox" name = "tag" value="Cheap"/> Cheap</p>

                    <label for = "comment-content">Comment content:</label>
    
                    <textarea class="comment-send-input" id = "comment-content" name="comment"  cols="80" rows="10" placeholder="Write Your Comment Here"></textarea>


                    <button type = "submit" name = "submit" class="btn">Submit</button>
                </div>
            </form>
            
        </div>
    </div>

    {{/if}}
</div>

<div>
    <a href="/comment">Click here to back home!</a> 
</div>