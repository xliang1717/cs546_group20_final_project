<div>
    {{#if haserror}}
    <p class="error">We're sorry, but {{error}}.</p>
    <a href="/">Click here to back home!</a>

    {{else}}

    <div id="form">
        <form id="addNewParkLot" class="parkLot-form">

            <div class="lotName">
                <label for="ParkLotName">Parking Lot Name : </label>
                <input type="text" id="ParkLotName" name="ParkLotName" placeholder="Add Parking Lot Name">
            </div>

            <div class="parkCharge">

                <p>Charge Standard of Parking:</p>
                <ul class="parkChargeList">
                    <li>
                        <label for="half-hour-one-hour"> half hour ~ 1 hour: </label>
                        <input type="number" id="half-hour-one-hour" name="half-hour-one-hour" step="any">
                    </li>
                    <li>
                        <label for="one-hour-one-and-half-hour"> 1 hour ~ 1 and half hour: </label>
                        <input type="number" id="one-hour-one-and-half-hour" name="one-hour-one-and-half-hour"
                            step="any">
                    </li>
                    <li>
                        <label for="one-and-half-hour-two-hour"> 1 and half hour ~ 2 hour: </label>
                        <input type="number" id="one-and-half-hour-two-hour" name="one-and-half-hour-two-hour"
                            step="any">
                    </li>
                    <li>
                        <label for="above-two-hour">above 2 hours: </label>
                        <input type="number" id="above-two-hour" name="above-two-hour" step="any">
                    </li>
                </ul>

            </div>


            <div class="location_Co">
                <p>The Coordinates Of This Parking Lot:</p>

                <ul class="longLa">
                    <li>
                        <label for="Longitude"> Longitude: </label>
                        <input type="number" id="Longitude" name="Longitude" step="any">
                    </li>
                    <li>
                        <label for="Latitude"> Latitude: </label>
                        <input type="number" id="Latitude" name="Latitude" step="any">
                    </li>
                    <li>
                        <label for="ParkingLotLocationZipCode">Location Zip Code Of Your Parking Lot : </label>
                        <input type="Number" id="ParkingLotLocationZipCode" name="ParkingLotLocationZipCode"
                            placeholder="Zip Code">
                    </li>
                </ul>
            </div>


            <div class="disableSelection">
                <label for="DisabilityFrendly">Is There Any Disabled Friendly Facilities In Your Parking Lot ? :</label>
                <select name="DisabilityFrendly" id="DisabilityFrendly">
                    <option value="True">True</option>
                    <option value="False">False</option>
                </select>
            </div>



            <div class="sizeSelection">
                <label for="suitableVehicleSize">Choose Suitable VehicleSize :</label>
                <select id="suitableVehicleSize" multiple="multiple">
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select>
            </div>


            <div class="trafficCondition">
                <p>Traffic Conditions:</p>
                <ul class="timeEpisode">

                    <li>
                        <label for="m">8:00~15:00 :</label>
                        <select name="m" id="m">
                            <option value="light">light</option>
                            <option value="Heavy">Heavy</option>
                            <option value="Fine">Fine</option>
                        </select>
                    </li>

                    <li>
                        <label for="a">15:00~17:00 :</label>
                        <select name="a" id="a">
                            <option value="light">light</option>
                            <option value="Heavy">Heavy</option>
                            <option value="Fine">Fine</option>
                        </select>
                    </li>

                    <li>
                        <label for="e">17:00~24:00 :</label>
                        <select name="e" id="e">
                            <option value="light">light</option>
                            <option value="Heavy">Heavy</option>
                            <option value="Fine">Fine</option>
                        </select>
                    </li>

                    <li>
                        <label for="n">24:00~8:00 :</label>
                        <select name="n" id="n">
                            <option value="light">light</option>
                            <option value="Heavy">Heavy</option>
                            <option value="Fine">Fine</option>
                        </select>
                    </li>
                </ul>

            </div>

            <div class="parklotCapa">
                <label for="ParkingLotCapacity"> The Capacity of Parking Lot: </label>
                <input type="number" id="ParkingLotCapacity" name="ParkingLotCapacity">
            </div>

            <button type="submit" name="submit" class="btn-pl">Submit My Parking Lot</button>
        </form>
        {{!-- <a href="/comment"><button class="btn-back">Back To Home Page!</button></a> --}}
        <button onclick="window.location.href='/'" class="btn-back">Back</button>
    </div>

    <div id="error" hidden>
    </div>

    <div id="result" hidden>
    </div>

    {{!-- <div>
        <a class="link" href="/comment">Click here to back home!</a>
    </div> --}}

    {{/if}}

</div>